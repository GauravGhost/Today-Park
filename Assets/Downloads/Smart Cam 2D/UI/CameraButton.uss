.camera-button {
  display: flex;
  position: absolute;

  right: 10px;
}

.camera-button__container {
  overflow: hidden;

  align-items: center;
  justify-content: center;

  width: 55px;
  height: 36px;

  border-bottom-left-radius: 12px;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  border-bottom-right-radius: 12px;

  padding: 0 12px;
}

.camera-button__icon {
  width: 25px;
  height: 25px;
}
